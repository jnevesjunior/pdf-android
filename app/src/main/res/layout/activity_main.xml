<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1.41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/page_view" app:layout_constraintHorizontal_bias="0.6">
        <TextView
                android:text="Header Header Header Header Header Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent" android:textColor="#000000" android:textSize="10sp"/>

        <View
                android:background="@drawable/border"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/view3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/footer_textView"
                android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="1.0"/>

        <TextView
                android:text="DOCUMENT PDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="#000000" android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/view3" app:layout_constraintEnd_toEndOf="@+id/view3"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"/>
        <TextView
                android:text="Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="#000000" android:textSize="10sp"
                android:textStyle="bold" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/view3"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="@+id/textView6" android:textAlignment="textEnd"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/view3" app:layout_constraintStart_toStartOf="@+id/view3"
                android:layout_marginStart="8dp" android:scaleType="fitStart"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/view3" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                android:scaleType="fitEnd"/>
        <TextView
                android:text="Details:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView44" android:textSize="8sp"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/view3"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:id="@+id/recyclerview"
                app:layout_constraintTop_toBottomOf="@+id/textView44"
                android:layout_marginBottom="6dp" app:layout_constraintBottom_toTopOf="@+id/view6"/>
        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/view6"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="@+id/view3" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:background="#B7B9B7"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/textView45"/>
        <TextView
                android:text="_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView45" app:layout_constraintStart_toStartOf="@+id/view3"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/view3"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="8sp"
                android:layout_marginBottom="3dp" app:layout_constraintBottom_toTopOf="@+id/view7"/>
        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/view7"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="@+id/view3" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:background="#B7B9B7"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/view8"/>
        <View
                android:background="@drawable/name_area"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.25"
                android:layout_height="15dp"
                android:id="@+id/view" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintBottom_toBottomOf="@+id/view8"
        />
        <TextView
                android:text="Lorem ipsum dolor \n Lorem ipsum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#000000"
                android:textAlignment="center" android:textSize="4sp"
                app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view" app:layout_constraintStart_toStartOf="@+id/view"/>
        <TextView
                android:text="aLorem ipsum dolor sit amet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="4sp"
                android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/view8"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/view9"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/view"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/view8"
                android:layout_marginTop="8dp"/>
        <View
                android:background="@drawable/signature_area"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.25"
                android:layout_height="60dp"
                android:id="@+id/view8" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/view3"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="@+id/view3"/>
        <View
                android:background="@drawable/name_area"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.25"
                android:layout_height="15dp"
                android:id="@+id/view2"
                app:layout_constraintBottom_toBottomOf="@+id/view8"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/view3"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"/>
        <TextView
                android:text="Lorem ipsum dolor \n Lorem ipsum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="#000000"
                android:textAlignment="center" android:textSize="4sp"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"/>
        <View
                android:background="@drawable/signature_area"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.25"
                android:layout_height="60dp"
                android:id="@+id/view9"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/view3" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/view3"/>

        <TextView
                android:text="Footer Footer Footer Footer Footer Footer Footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/footer_textView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#000000" android:textSize="10sp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"/>

        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline"
                app:layout_constraintGuide_percent="0.4"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.7"
                android:id="@+id/guideline2"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.5"
                android:id="@+id/guideline3"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="PDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/generate_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>